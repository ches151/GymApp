<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no">
    <title>Gym Application</title>
    <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Roboto:400,500,700,400italic'>
    @Styles.Render(
"~/Content/angular-material"
, "~/Content/Site.css"
)
    <style type="text/css">
        /**
        * Hide when Angular is not yet loaded and initialized
        */
        [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
            display: none !important;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")

</head>
<body ng-app="app" layout="row" ng-controller="WorkoutController as wc" ng-cloak>

    <div flex layout="column" tabIndex="-1" role="main" class="md-whiteframe-z2">


        <md-content flex id="content">
            <md-list>
                <md-list-item class="md-2-line" ng-repeat="workout in wc.workouts" ng-click="wc.startWorkout(workout, $event)" ng-class="{'selected' : workout.Id === wc.activeWorkout }">
                    <div class="md-list-item-text">
                        <h3>{{ workout.Name }}</h3>
                        <h4>{{ wc.getExercisesList(workout) }}</h4>
                    </div>
                </md-list-item>
            </md-list>
        </md-content>

    </div>


