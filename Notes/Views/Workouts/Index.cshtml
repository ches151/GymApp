                </button>
            </div>
        </div>*@

    @Scripts.Render(
"~/bundles/jquery"
, "~/bundles/bootstrap"
, "~/bundles/angular"
, "~/bundles/main"
)
    <script>
        angular.module("app", ['ngMaterial', "gym"])
            .config(function ($mdThemingProvider, $mdIconProvider) {

                $mdThemingProvider.theme('default')
                    .primaryPalette('brown')
                    .accentPalette('red');

            })
            .constant("settings", {
                rootUrl: "@Request.ApplicationPath",
                appName: "My First App"
            });
    </script>
</body>
</html>

